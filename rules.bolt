type User {
  name: String,
  email:  String,
}

type House {
  url: String,
  img:  String,
  price: Number
}

path /users/{id} is User {
  read() { isCurrentUser(id) }
  write() { isCurrentUser(id) }
}

path /users/{id} is House {
  read() { true }
  write() { true }
}

path /users {
  read() { true }
}

path /houses {
  read() { true }
  write() { true }
}

isCurrentUser(id) { auth != null && auth.uid == id }