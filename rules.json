{
  "rules": {
    "users": {
      "$id": {
        ".validate": "newData.hasChildren(['name', 'email', 'url', 'img', 'price'])",
        "name": {
          ".validate": "newData.isString()"
        },
        "email": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "auth != null && auth.uid == $id",
        ".write": "auth != null && auth.uid == $id",
        "url": {
          ".validate": "newData.isString()"
        },
        "img": {
          ".validate": "newData.isString()"
        },
        "price": {
          ".validate": "newData.isNumber()"
        }
      },
      ".read": "true"
    },
    "houses": {
      ".read": "true",
      ".write": "true"
    }
  }
}
